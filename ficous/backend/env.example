# Configurações do Backend Ficous
DATABASE_URL=sqlite:///./ficous_dev.db
SECRET_KEY=ficous-super-secret-key-development
ALGORITHM=HS256
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000

# Configurações do Sage (IA)
OPENAI_API_KEY=test-key
SAGE_AUTO_PROCESS_ON_SAVE=true
SAGE_DEFAULT_LANG=pt-BR
SAGE_MAX_INPUT_CHARS=12000
SAGE_MAX_CONTEXT_CHARS=16000

# Configurações de Upload
MAX_UPLOAD_MB=10
MAX_EXTRACT_CHARS=20000
MAX_PDF_PAGES=50
ALLOW_GZIP_RESPONSE=true

# Configurações de Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=300

# Configurações de Admin
ADMIN_ENABLED=true

# Configurações de Rate Limiting
SAGE_RATE_LIMIT=10/minute
SAGE_RATE_LIMIT_BURST=20/minute

# Configurações de Circuit Breaker
OPENAI_MAX_RETRIES=3
OPENAI_BASE_DELAY=1.0
OPENAI_MAX_DELAY=10.0
OPENAI_JITTER=true
